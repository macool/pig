.col-sm-8.col-sm-offset-2
  .cms-form-well
    =semantic_form_for [pig, :admin, @meta_datum] do |f|
      =f.inputs do
        =f.input :page_slug, prepend: '/', hint: 'The url of the page, after the first /'
        =f.input :title, hint: 'Meta title: aim for 70 characters'
        =f.input :description, hint: 'Meta short description: Brief summary of the page, aim for 70 characters'
        =f.input :keywords, hint: 'Meta keywords: comma separated'
        =f.input :image, as: :image, hint: 'Meta images for facebook: Minimum size 600px x 315px, recommended size 1200px x 630px'
      =f.actions do
        =f.action :submit, label: 'Save', :button_html => {:class => 'btn btn-success pull-right'}
      .clearfix
